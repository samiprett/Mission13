@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>Bowlers</h1>


<table class="table table-borderless table-hover table-responsive-md">
    <thead>
        <tr>
            <td>Bowler Name</td>
            <td>Bowler City</td>
            <td>Bowler State</td>
            <td>Bowler ZipCode</td>
            <td>Bowler Phone Number</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerLastName, @b.BowlerFirstName @b.BowlerMiddleInit</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID" class="btn btn-outline-success">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-bid="@b.BowlerID" class="btn btn-outline-success">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="nav-link text-dark" asp-controller="Home" asp-action="Create">Add Bowler</a>